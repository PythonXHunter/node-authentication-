doctype html
html
  head
    title Login
  body
    if message
      h4 #{message}
      p 
        a(href="/login") Login Again!
    else
      form(action="/login" method="post")
        input(name="id" type="text" required placeholder="User ID")
        input(name="password" type="password" required placeholder="Password")
        button(type="submit") Login